{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "jsxImportSource": "hono/jsx",
    "esModuleInterop": true,
    "lib": ["es6"],
    "types": ["reflect-metadata", "@types/jest"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  }
}